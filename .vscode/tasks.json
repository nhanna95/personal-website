{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Jekyll Server",
            "type": "shell",
            "command": "eval \"$(rbenv init - zsh)\" && export LC_ALL=en_US.UTF-8 && export LANG=en_US.UTF-8 && bundle exec jekyll serve --host 0.0.0.0",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Server running.*|Auto-regeneration.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Open Browser to Jekyll",
            "type": "shell",
            "command": "open http://localhost:4000",
            "presentation": {
                "reveal": "never",
                "echo": true
            },
            "problemMatcher": []
        },
        {
            "label": "Start Jekyll and Open Browser",
            "dependsOn": [
                "Start Jekyll Server"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "echo 'Waiting for Jekyll server to start...' && for i in {1..30}; do if curl -s http://localhost:4000 > /dev/null; then echo 'Server is ready!'; open http://localhost:4000; exit 0; fi; sleep 1; done; echo 'Server may still be starting. Opening browser anyway...'; open http://localhost:4000",
            "presentation": {
                "reveal": "always",
                "echo": true
            },
            "problemMatcher": []
        }
    ]
}

