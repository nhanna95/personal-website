{
    // Live Server (Go Live) - Note: Jekyll is already running on port 4000
    // Use the "Open Browser" task instead, or click Go Live and it will try to use port 4000
    "liveServer.settings.port": 4001,
    "liveServer.settings.CustomBrowser": "default",
    "liveServer.settings.donotShowInfoMsg": true,
    // File associations for Jekyll/Liquid
    "files.associations": {
        "*.html": "liquid"
    },
    // Auto-save for easier development
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000
}

